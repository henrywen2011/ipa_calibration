<?xml version="1.0"?>

<launch>

	<arg name="robot" default="robotino"/>		<!-- robotino, cob4 or raw3 -->

	<!-- HACK: raw3-1 additional coordinate system for relative localization when calibrating at the robot's right side -->
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_base_rotated" output="screen" args="0 0 0 -1.57079632679 0 0 base_link base_link_rotated 100"/>


	<node ns="corner_localization" name="relative_localization" pkg="relative_localization" type="relative_localization_node" output="screen">
		<rosparam command="load" file="$(find relative_localization)/ros/launch/settings/corner_localization_params_$(arg robot).yaml"/>
		<param name="localization_method" value="corner" />
	</node>

</launch>
